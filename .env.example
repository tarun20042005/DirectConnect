# DirectConnect Rentals - Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@db.neon.tech/dbname?sslmode=require"

# Session Secret (generate a random string for security)
SESSION_SECRET="your-random-secret-key-change-this"

# Stripe Configuration (Optional - for payment integration)
STRIPE_PUBLISHABLE_KEY="pk_test_your_key_here"
STRIPE_SECRET_KEY="sk_test_your_key_here"

# Node Environment
NODE_ENV="development"

# IMPORTANT FOR LOCAL DEVELOPMENT:
# Do NOT set REPL_ID when running locally - this prevents Replit UI elements from showing
# Replit automatically sets REPL_ID when running on replit.com
# (Do not add REPL_ID to this file)
